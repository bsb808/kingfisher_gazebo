<?xml version="1.0" ?>
<sdf version="1.4">
  <world name="pond">
    <!-- A global light source -->
    <include>
      <uri>model://sun</uri>
    </include>

    <gui fullscreen='0'>
      <camera name='user_camera'>
        <pose>30 -30 20 0 0.275643 2.35619</pose>
        <view_controller>orbit</view_controller>
      </camera>
    </gui>

    <model name='ground_plane'>
      <static>1</static>
      <link name='link'>
        <collision name='collision'>
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <surface>
            <friction>
              <ode>
                <mu>100</mu>
                <mu2>50</mu2>
              </ode>
            </friction>
            <bounce/>
            <contact>
              <ode/>
            </contact>
          </surface>
          <max_contacts>10</max_contacts>
        </collision>
        <visual name='visual'>
          <cast_shadows>1</cast_shadows>
	  <transparency>0.9</transparency>
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
            <script>
              <uri>file://media/materials/scripts/gazebo.material</uri>
              <name>Gazebo/Grey</name>
            </script>
          </material>
        </visual>
        <velocity_decay>
          <linear>0</linear>
          <angular>0</angular>
        </velocity_decay>
        <self_collide>0</self_collide>
        <kinematic>0</kinematic>
        <gravity>1</gravity>
      </link>
    </model>

    <model name='water_plane'>
      <static>1</static>
      <pose>0 0 5 0 -0 0</pose>
      <link name='link'>
        <visual name='visual'>
          <cast_shadows>1</cast_shadows>
	  <transparency>0.5</transparency>
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
	     <ambient>0 0 0.5 0.5</ambient>
	     <diffuse>0 0 0.5 0.5</diffuse>
	     <specular>0 0 0.5 0.5</specular>
	     <emissive>0 0 0 0</emissive>
            <!--<script>
              <uri>file://media/materials/scripts/gazebo.material</uri>
              <name>Gazebo/Blue</name>
            </script>-->
          </material>
        </visual>
      </link>
    </model>

    <model name="heightmap">
      <pose>0 0 5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <heightmap>
	      <!-- This file is in the models directory of the ROS package
	      The export tag in the package.xml file tells Gazebo to include
	      This in the path. -->
              <uri>file://pondmap.png</uri>
              <size>100 100 12 </size>
              <pos>0 0 -11</pos>
            </heightmap>
          </geometry>
        </collision>
        <visual name="visual_abcedf">
          <geometry>
            <heightmap>
              <use_terrain_paging>false</use_terrain_paging>
              <texture>
                <diffuse>file://media/materials/textures/dirt_diffusespecular.png</diffuse>
                <normal>file://media/materials/textures/flat_normal.png</normal>
                <size>1</size>
              </texture>
              <texture>
                <diffuse>file://media/materials/textures/fungus_diffusespecular.png</diffuse>
                <normal>file://media/materials/textures/flat_normal.png</normal>
                <size>1</size>
              </texture>
              <blend>
                <min_height>2</min_height>
                <fade_dist>5</fade_dist>
              </blend>
              <blend>
                <min_height>4</min_height>
                <fade_dist>5</fade_dist>
              </blend>
	      <!-- This file is in the models directory of the ROS package
	      The export tag in the package.xml file tells Gazebo to include
	      This in the path. -->
              <uri>file://pondmap.png</uri>
              <size>100 100 12</size>
              <pos>0 0 -6</pos>
            </heightmap>
          </geometry>
        </visual>
      </link>
    </model>


    <model name="buoys_model">
      <pose>0 0 5 0 0 0 </pose>
      <link name="buoy1l">
	<pose>0 5 1.5 0 0 0 </pose>
	<velocity_decay>
	  <linear>0.001</linear>
	  <angular>0.001</angular>
	</velocity_decay>
	<inertial>
	  <mass>0.1</mass>
          <inertia>
            <ixx>0.1</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.1</iyy>
            <iyz>0</iyz>
            <izz>0.1</izz>
          </inertia>
        </inertial>
	<collision name="buoy1c">
	  <geometry>
	    <cylinder>
	      <radius>0.25</radius>
	      <length>1.0</length>
	    </cylinder>
	  </geometry>
	</collision>
	<visual name="buoy1v">
	  <geometry>
	    <cylinder>
	      <radius>0.25</radius>
	      <length>1.0</length>
	    </cylinder>
	  </geometry>
	  <material>
            <script>
              <uri>file://media/materials/scripts/gazebo.material</uri>
              <name>Gazebo/Red</name>
            </script>
          </material>
	</visual>
      </link>
      <link name="keel">
	<pose>0 5 0.7 0 0 0 </pose>
	<velocity_decay>
	  <linear>0.001</linear>
	  <angular>0.001</angular>
	</velocity_decay>
	<inertial>
	  <pose> 0 0 -1.0 0 0 0 </pose>
	  <mass>10</mass>
          <inertia>
            <ixx>10</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>10</iyy>
            <iyz>0</iyz>
            <izz>10</izz>
          </inertia>
        </inertial>
	<collision name="keelc">
	  <geometry>
	    <cylinder>
	      <radius>0.3</radius>
	      <length>0.5</length>
	    </cylinder>
	  </geometry>
	</collision>
	<visual name="keelv">
	  <geometry>
	    <cylinder>
	      <radius>0.3</radius>
	      <length>0.5</length>
	    </cylinder>
	  </geometry>
	  <material>
            <script>
              <uri>file://media/materials/scripts/gazebo.material</uri>
              <name>Gazebo/Grey</name>
            </script>
          </material>
	</visual>
      </link>

      <joint type="revolute" name="keeljoint">
        <child>buoy1l</child>
        <parent>keel</parent>
	<axis>
	  <xyz>0 0 1</xyz>
	  <limit>
	    <lower>-1e+16</lower>
	    <upper>1e+16</upper>
	  </limit>
	</axis>
      </joint>
      <!--
      <joint type="ball" name="buoy1lower">
	<pose>0 0 0 0 0 0 </pose>
        <child>line1l</child>
        <parent>world</parent>
      </joint>

      <joint type="ball" name="buoy1jupper">
	<pose>0 0 4.5  0 0 0 </pose>
        <child>line1l</child>
        <parent>buoy1l</parent>
      </joint>
      -->

      <link name="buoy2l">
	<pose>0 7 10 0 0 0 </pose>
	<velocity_decay>
	  <linear>0.001</linear>
	  <angular>0.001</angular>
	</velocity_decay>
	<inertial>
	  <pose> 0 0 -10 0 0 0</pose>
	  <mass>10</mass>
          <inertia>
            <ixx>10</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>10</iyy>
            <iyz>0</iyz>
            <izz>10</izz>
          </inertia>
        </inertial>
	<collision name="buoy2c">
	  <geometry>
	    <cylinder>
	      <radius>0.25</radius>
	      <length>1.0</length>
	    </cylinder>
	  </geometry>
	</collision>
	<visual name="buoy2v">
	  <geometry>
	    <cylinder>
	      <radius>0.25</radius>
	      <length>1.0</length>
	    </cylinder>
	  </geometry>
	  <material>
            <script>
              <uri>file://media/materials/scripts/gazebo.material</uri>
              <name>Gazebo/Green</name>
            </script>
          </material>
	</visual>
      </link>

      <plugin name="BuoyancyPlugin" filename="libbuoyancy_gazebo_plugin.so">
	<fluid_density>1000</fluid_density>
	<fluid_level>5.0</fluid_level>
	<fluid_drag>10</fluid_drag>
	<link name="buoy1l">
	  <name>buoy1l</name>
	  <center_of_volume>0 0 0.5</center_of_volume>
	  <area>0.1</area>
	  <height>1</height>
	</link>
	<link>
	  <name>buoy2l</name>
	  <center_of_volume>0 0 1.0</center_of_volume>
	  <area>0.1</area>
	  <height>1</height>
	</link>
      </plugin>

    </model>


  </world>
</sdf>

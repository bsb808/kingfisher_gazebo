<?xml version="1.0" ?>
<sdf version="1.4">
  <model name="lake">
    <pose>0 0 0 0 0 0</pose>
    <static>true</static>
    <link name="lakelink">
      <collision name="lakecoll">
	<geometry>
	  <heightmap>
	    <!-- This file is in the models directory of the ROS package
		 The export tag in the package.xml file tells Gazebo to include
		 This in the path. -->
	    <uri>file://lake/pondmap.png</uri>
	    <size>100 100 12 </size>
	    <pos>0 0 -6</pos>
	  </heightmap>
	</geometry>
      </collision>
      <visual name="lakevis">
	<geometry>
	  <heightmap>
	    <use_terrain_paging>false</use_terrain_paging>

	    <texture>
	      <diffuse>file://media/materials/textures/dirt_diffusespecular.png</diffuse>
	      <normal>file://media/materials/textures/flat_normal.png</normal>
	      <size>1</size>
	    </texture>

	    <blend>
	      <min_height>2</min_height>
	      <fade_dist>1</fade_dist>
	    </blend>

	    <uri>file://lake/pondmap.png</uri>
	    <size>100 100 12</size>
	    <pos>0 0 -6</pos>
	  </heightmap>
	</geometry>
      </visual>
    </link>
  </model>
</sdf>
